@page
@model AYAlab12.Pages.MenuList.IndexModel
@{
}
<head>
    <style>
        .button {
            display: inline-block;
            padding: 5px 10px;
            font-size: 12px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            color: #fff;
            background-color: DodgerBlue;
            border: none;
            border-radius: 5px;
            box-shadow: 0 4px #CCC;
        }

            .button:hover {
                background-color: #2EA9FF
            }

            .button:active {
                background-color: #2EA9FF;
                box-shadow: 0 2px #BBB;
                transform: translateY(4px);
            }
    </style>
</head>
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Список меню</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Добавить позицию</a>
    </div>
    <div class="col-12 border p-3 mt3">
        <form method="post">
            @if (Model.MenuWithRestaurantsList.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            Name
                        </th>
                        <th>
                            Restaurant
                        </th>
                        <th>
                            Price
                        </th>
                    </tr>
                    @foreach (var Menu in Model.MenuWithRestaurantsList)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m=>Menu.Menu.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m=>Menu.Restaurant.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m=>Menu.Menu.Price)
                            </td>
                            <td>
                                <a asp-page="Delete" asp-route-id="@Menu.Menu.Id" class="btn btn-danger btn-sm">Delete</a>
                                <a asp-page="Edit" asp-route-id="@Menu.Menu.Id" class="button">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>Нет доступных меню</p>
            }
        </form>
    </div>
</div>